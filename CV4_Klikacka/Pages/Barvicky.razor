@page "/barvicky"

<PageTitle>Barvičky</PageTitle>


<h3>Barvičky</h3>


<div>
    <table>
        <tbody>
           
                <tr>
                    @for (int j = 0; j < grafika.BarvySeznam.Count; j++)
                    {
                    var bunka = grafika.BarvySeznam[j];
                    <td class="@bunka.StyleClassName" @onclick="() => grafika.OnCellClick(bunka)">
                            @bunka.Hodnota
                    </td>
                    }
                </tr>
            
        </tbody>
    </table>
</div>





<div class="mt-2">
    <table>
        <tbody>
            @for (int i = 0; i < grafika.Matice.GetLength(0); i++)
            {
                var radka = i;
                <tr>
                    @for (int j = 0; j < grafika.Matice.GetLength(1); j++)
                    {
                        var sloupec = j;
                        <td class="@grafika.Matice[radka,sloupec].StyleClassName" @onclick="() => grafika.OnCellClick(grafika.Matice[radka,sloupec])">
                            @grafika.Matice[i, j].Hodnota
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
@code {
    private Models.Grafika grafika = new Models.Grafika(10, 12, 4);
}
